{% extends "base.njk" %}

{% block titulo %}Limpiezas | Nueva{% endblock %}

{% block contenido %}

    <h1 class="m-2 mb-3">Nueva Limpieza (Habitaci√≥n {{habitacion.numero}}) </h1>
    {% if errores.general %}
        <div class="alert alert-danger">
            <p class="text-danger">{{errores.general}}</p>
        </div>
    {% endif %}
    <form action="/limpiezas/{{habitacion.id}}" method="post">
        <div class="form-group">
            <label>Fecha de limpieza:
                <input type="date" class="form-control" name="fechaHora" value="{{fechaActual | date("yyyy-MM-DD")}}">
            </label>
        </div>
        <div class="form-group">
            <label>Observaciones:
                <textarea class="form-control" name="observaciones" rows="5" cols="200"></textarea>
            </label>
            {% if errores.descripcion %}
                <p class="text-danger">{{errores.descripcion}}</p>
            {% endif %}
        </div>
        <br>
        <button type="submit" class="btn btn-primary">
            Enviar
        </button>
    </form>

{% endblock %}